---
import { SITE_TITLE } from '../consts';
---

<header>
  <nav>
    <div class="logo">
      <a href="/" id="site-logo" class="header-text">{SITE_TITLE}</a>
    </div>
    <div id="nav-links" class="nav-links">
      <a href="/" class="header-text">Home</a>
      <a href="/blog" class="header-text">Blog</a>
      <a href="/projects" class="header-text">Projects</a>
      <a href="/about" class="header-text">About</a>
    </div>
  </nav>
</header>

<script>
  const logoText = document.getElementById('site-logo');
  const navLinks = document.getElementById('nav-links');
  const SCROLL_THRESHOLD = 50;

  if (logoText && navLinks) {
    if (window.scrollY >= SCROLL_THRESHOLD) {
      logoText.classList.add('header-text-scrolled');
      Array.from(navLinks.getElementsByTagName('a')).forEach(link => {
        link.classList.add('header-text-scrolled');
      });
    }

    window.addEventListener('scroll', () => {
      const scrollPosition = window.scrollY;
      if (scrollPosition >= SCROLL_THRESHOLD) {
        logoText.classList.add('header-text-scrolled');
        Array.from(navLinks.getElementsByTagName('a')).forEach(link => {
          link.classList.add('header-text-scrolled');
        });
      } else {
        logoText.classList.remove('header-text-scrolled');
        Array.from(navLinks.getElementsByTagName('a')).forEach(link => {
          link.classList.remove('header-text-scrolled');
        });
      }
    });
  }
</script>

<style>
  header {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 2;
  }

  nav {
    max-width: 1600px;
    margin: 0 auto;
    padding: 0.25rem 4rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .logo a {
    font-family: 'Russo One', sans-serif;
    font-size: 2rem;
    text-decoration: none;
    color: transparent;
    background-color: #666666;
    background-clip: text;
    text-transform: uppercase;
    letter-spacing: 2px;
    text-shadow: 3px 5px 1px rgba(245, 245, 245, 0.5);
  }

  #nav-links a {
    font-family: 'Russo One', sans-serif;
    font-size: 1.5rem;
    text-decoration: none;
    color: transparent;
    background-color: #666666;
    background-clip: text;
    text-transform: uppercase;
    letter-spacing: 2px;
    text-shadow: 3px 5px 1px rgba(245, 245, 245, 0.5);
  }

  .header-text {
    font-family: 'Russo One', sans-serif;
    text-decoration: none;
    color: transparent;
    background-color: #666666;
    background-clip: text;
    text-transform: uppercase;
    letter-spacing: 2px;
    text-shadow: 3px 5px 1px rgba(245, 245, 245, 0.5);
    transition:
      color 0.3s ease,
      text-shadow 0.3s ease;
  }

  .header-text-scrolled {
    color: var(--neon-blue) !important;
    text-shadow: none !important;
  }

  .nav-links {
    display: flex;
    gap: 2rem;
  }

  .nav-links a {
    font-size: 2rem;
    text-decoration: none;
    color: var(--neon-blue);
    position: relative;
    padding: 0.5rem 0;
  }

  .nav-links a::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 0;
    height: 2px;
    background: var(--neon-blue);
    transition: width 0.3s ease;
  }

  .nav-links a:hover::after {
    width: 100%;
  }

  @media (max-width: 768px) {
    nav {
      flex-direction: column;
      gap: 1rem;
      padding: 1rem;
    }

    .nav-links {
      flex-direction: column;
      gap: 1rem;
      text-align: center;
    }
  }
</style>
