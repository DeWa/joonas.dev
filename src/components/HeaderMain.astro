---
import { SITE_TITLE } from '../consts';
---

<header>
  <nav id="main-navigation">
    <div class="logo">
      <a href="/" id="site-logo" class="header-text">{SITE_TITLE}</a>
    </div>

    <input type="checkbox" id="mobile-menu-toggle" class="mobile-menu-toggle" />

    <label for="mobile-menu-toggle" class="mobile-menu-button" aria-label="Toggle navigation menu">
      <span class="hamburger-line"></span>
      <span class="hamburger-line"></span>
      <span class="hamburger-line"></span>
    </label>

    <div id="nav-links" class="nav-links">
      <a href="/blog" class="header-text">Blog</a>
      <a href="/projects" class="header-text">Projects</a>
      <a href="/about" class="header-text">About</a>
    </div>
  </nav>
</header>

<script>
  const mainNavigation = document.getElementById('main-navigation');
  const logoText = document.getElementById('site-logo');
  const navLinks = document.getElementById('nav-links');
  const mobileMenuToggle = document.getElementById('mobile-menu-toggle');
  const SCROLL_THRESHOLD = 50;

  if (mobileMenuToggle && navLinks) {
    const checkbox = mobileMenuToggle as HTMLInputElement;
    const navLinkElements = navLinks.querySelectorAll('a');
    navLinkElements.forEach((link) => {
      link.addEventListener('click', () => {
        checkbox.checked = false;
      });
    });
  }

  if (logoText && mainNavigation) {
    window.addEventListener('scroll', () => {
      const scrollPosition = window.scrollY;
      if (scrollPosition >= SCROLL_THRESHOLD) {
        mainNavigation.style.setProperty('--old-computer-shadow', 'none');
        mainNavigation.style.setProperty('--navigation-text-color', 'var(--neon-blue)');
        mainNavigation.style.setProperty('--navigation-text-background-color', 'var(--neon-blue)');
      } else {
        mainNavigation.style.setProperty(
          '--old-computer-shadow',
          '3px 5px 1px rgba(208, 198, 174, 0.689)'
        );
        mainNavigation.style.setProperty('--navigation-text-color', 'transparent');
        mainNavigation.style.setProperty('--navigation-text-background-color', '#666666');
      }
    });
  }
</script>

<style>
  header {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 2;
  }

  #main-navigation {
    /* Variables */
    --old-computer-shadow: 3px 5px 1px rgba(208, 198, 174, 0.689);
    --navigation-text-color: transparent;
    --navigation-text-background-color: #666666;

    margin: 0 auto;
    padding: 0.25rem 4rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .logo a {
    font-size: 2rem;
  }

  #nav-links a {
    font-size: 1.5rem;
  }

  .header-text {
    font-family: 'Russo One', sans-serif;
    text-decoration: none;
    color: var(--navigation-text-color);
    background-color: var(--navigation-text-background-color);
    background-clip: text;
    -webkit-background-clip: text;
    text-fill-color: transparent;
    text-transform: uppercase;
    letter-spacing: 2px;
    transition:
      color 0.3s ease,
      text-shadow 0.3s ease;
    text-shadow: var(--old-computer-shadow);
  }

  .nav-links {
    display: flex;
    gap: 2rem;
  }

  .nav-links a {
    font-size: 2rem;
    text-decoration: none;
    position: relative;
    padding: 0.5rem 0;
  }

  .nav-links a::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 0;
    height: 2px;
    background: var(--navigation-text-color);
    transition: width 0.3s ease;
    text-shadow: var(--old-computer-shadow);
  }

  .nav-links a:hover::after {
    width: 100%;
  }

  /* Hidden checkbox for mobile menu */
  .mobile-menu-toggle {
    display: none;
  }

  /* Mobile menu button - hidden on desktop */
  .mobile-menu-button {
    display: none;
    flex-direction: column;
    justify-content: space-around;
    width: 2rem;
    height: 2rem;
    background: transparent;
    border: none;
    cursor: pointer;
    padding: 0;
    z-index: 1001;
    position: relative;
  }

  .hamburger-line {
    width: 100%;
    height: 3px;
    background: var(--navigation-text-background-color);
    transition: all 0.3s ease;
    transform-origin: center;
    border-radius: 2px;
    display: block;
    box-shadow: var(--old-computer-shadow);
  }

  /* Hamburger animation when checkbox is checked */
  #mobile-menu-toggle:checked + .mobile-menu-button .hamburger-line:nth-child(1) {
    transform: rotate(45deg) translate(6px, 6px);
    box-shadow: none;
  }

  #mobile-menu-toggle:checked + .mobile-menu-button .hamburger-line:nth-child(2) {
    opacity: 0;
    transform: scaleX(0);
  }

  #mobile-menu-toggle:checked + .mobile-menu-button .hamburger-line:nth-child(3) {
    transform: rotate(-45deg) translate(9px, -9px);
    box-shadow: none;
  }

  @media (max-width: 768px) {
    /* Show hamburger button on mobile */
    .mobile-menu-button {
      display: flex;
    }

    /* Hide nav links by default on mobile */
    .nav-links {
      display: none;
      position: absolute;
      top: 0;
      right: -100vw;
      width: 100vw;
      height: 100vh;
      background: rgba(10, 10, 10, 0.98);
      backdrop-filter: blur(20px);
      flex-direction: column;
      justify-content: flex-start;
      align-items: center;
      padding: 5rem 2rem 2rem;
      gap: 2rem;
      transition: right 0.3s cubic-bezier(0.4, 0, 0.2, 1);
      border-left: 1px solid var(--grid-color);
      box-shadow: -10px 0 30px rgba(0, 0, 0, 0.5);
    }

    /* Show nav links when checkbox is checked */
    #mobile-menu-toggle:checked ~ .nav-links {
      right: 0;
      display: flex;
    }

    .nav-links a {
      font-size: 1.5rem;
      padding: 1rem 0;
      width: 100%;
      text-align: center;
      border-bottom: 1px solid rgba(0, 255, 255, 0.1);
      min-height: 60px;
      color: var(----neon-blue) !important;
      text-shadow: none !important;
    }

    .nav-links a:last-child {
      border-bottom: none;
    }

    .nav-links a::after {
      display: none;
    }

    .nav-links a:hover {
      background: rgba(0, 255, 255, 0.1);
      border-radius: 8px;
    }
  }

  @media (max-width: 480px) {
    #main-navigation {
      margin: 0 auto;
      padding: 0.25rem 1rem;
    }
    .nav-links {
      width: 100%;
      right: -100%;
      padding: 4rem 1rem 2rem;
    }

    .nav-links a {
      font-size: 1.3rem;
      padding: 0.75rem 0;
    }
  }
</style>
