---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Hero from '../components/Hero.astro';
import { SITE_TITLE } from '../consts';
import '../styles/global.css';
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description="DELETE ME" />
  </head>
  <body>
    <Header />
    <Hero />
    <main class="container">
      <section class="about-section">
        <h2 class="retro-title">About Me</h2>
        <p class="retro-text">I'm a developer!</p>
      </section>

      <section class="featured-section">
        <h2 class="retro-title">Featured Projects</h2>
        <div class="project-grid"></div>
      </section>
    </main>
    <Footer />
  </body>
</html>

<style>
  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem;
  }

  .about-section,
  .featured-section {
    margin: 4rem 0;
    text-align: center;
  }

  .project-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
    margin-top: 2rem;
  }

  @media (max-width: 768px) {
    .container {
      padding: 1rem;
    }
  }
</style>
