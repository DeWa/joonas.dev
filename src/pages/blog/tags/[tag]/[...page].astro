---
import BaseHead from '../../../../components/BaseHead.astro';
import Header from '../../../../components/Header.astro';
import Footer from '../../../../components/Footer.astro';
import { getCollection } from 'astro:content';
import FormattedDate from '../../../../components/FormattedDate.astro';
import { Image } from 'astro:assets';
import Pagination from '../../../../components/Pagination.astro';
import '../../../../styles/global.css';
import type { GetStaticPaths } from 'astro';

export const getStaticPaths: GetStaticPaths = async ({ paginate }) => {
  const posts = await getCollection('blog');
  const allTags = new Set<string>();
  posts.forEach((post) => {
    post.data.tags.forEach((tag: string) => allTags.add(tag));
  });

  const allPaths = [];

  for (const tag of allTags) {
    const filteredPosts = posts
      .filter((post) => post.data.tags.includes(tag))
      .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

    const paginated = paginate(filteredPosts, {
      params: { tag },
      pageSize: 5,
    });

    allPaths.push(...paginated);
  }

  return allPaths;
};

const { page } = Astro.props;
const tag = Astro.params.tag;
if (!page) return Astro.redirect('/404');
const pathname = new URL(Astro.request.url).pathname.split('/');
const firstPath = pathname[1];
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead
      title={`Joonas.dev - Blog - ${String(tag).toUpperCase()}`}
      description={`Blog posts tagged with ${String(tag).toUpperCase()}`}
    />
    <style>
      main {
        margin-top: 30px;
      }

      .blog-list {
        max-width: 960px;
        margin: 5rem auto;
      }

      ul {
        display: flex;
        flex-wrap: wrap;
        gap: 2rem;
        list-style-type: none;
        margin: 0;
        padding: 0;
      }
      ul li {
        width: calc(50% - 1rem);
      }
      ul li * {
        text-decoration: none;
        transition: 0.2s ease;
      }

      ul li img {
        margin-bottom: 0.5rem;
        border-radius: 12px;
      }
      ul li a {
        display: block;
      }
      .title-wrapper {
        display: flex;
        align-items: center;
        flex-wrap: wrap;
        gap: 0.75rem;
        margin-bottom: 0.5rem;
      }
      .title {
        margin: 0;
        color: rgb(var(--black));
        line-height: 1;
      }
      .date {
        margin: 0;
        color: rgb(var(--gray));
      }
      ul li a:hover h4,
      ul li a:hover .date {
        color: rgb(var(--accent));
      }
      ul a:hover img {
        box-shadow: var(--box-shadow);
      }

      .hero-image {
        width: 100%;
        height: 360px;
      }

      .hero-image img {
        width: 100%;
        height: 100%;
        object-fit: cover;
      }
      .tags {
        display: flex;
        flex-wrap: wrap;
        gap: 0.5rem;
        align-items: center;
      }

      .tag {
        display: inline-block;
        padding: 0.25rem 0.75rem;
        border-radius: 20px;
        font-size: 0.85rem;
        background: rgba(0, 255, 247, 0.1);
        border: 1px solid rgba(0, 255, 247, 0.3);
        color: #00fff7;
        transition: all 0.2s ease;
      }
      .tag:hover {
        background: rgba(0, 255, 247, 0.2);
        border-color: rgba(0, 255, 247, 0.5);
        box-shadow: 0 0 8px rgba(0, 255, 247, 0.3);
      }
      @media (max-width: 720px) {
        ul {
          gap: 0.5em;
        }
        ul li {
          width: 100%;
          text-align: center;
        }
      }
      .tag-title {
        text-align: center;
        margin-bottom: 2rem;
      }
    </style>
  </head>
  <body>
    <Header />
    <main>
      <section class="blog-list">
        <h1 class="tag-title">{String(tag).toUpperCase()}</h1>
        <ul>
          {
            page.data.map((post: any) => (
              <li>
                <a href={`/blog/${post.id}/`}>
                  {post.data.heroImage && (
                    <div class="hero-image">
                      <Image src={post.data.heroImage} alt={post.data.title} loading="lazy" />
                    </div>
                  )}
                  <div class="title-wrapper">
                    <h4 class="title">{post.data.title}</h4>
                    {post.data.tags && post.data.tags.length > 0 && (
                      <div class="tags">
                        {post.data.tags.map((tag: string) => (
                          <a href={`/blog/tags/${tag}/`}>
                            <span class="tag">{tag}</span>
                          </a>
                        ))}
                      </div>
                    )}
                  </div>
                  <p class="date">
                    <FormattedDate date={post.data.pubDate} />
                  </p>
                </a>
              </li>
            ))
          }
        </ul>
      </section>
      {
        page.total > 5 ? (
          <div class="mt-4">
            <Pagination
              length={page.lastPage}
              currentUrl={page.url.current}
              currentPage={page.currentPage}
              firstUrl={`/${firstPath}`}
              prevUrl={page.url.prev}
              nextUrl={page.url.next}
              lastUrl={`/${firstPath}/${page.lastPage}`}
            />
          </div>
        ) : null
      }
    </main>
    <Footer />
  </body>
</html>
