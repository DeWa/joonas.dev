---
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';
import { Image } from 'astro:assets';

type Props = CollectionEntry<'blog'>['data'];

const { title, description, pubDate, updatedDate, heroImage, tags } = Astro.props;
---

<html lang="en">
  <head>
    <BaseHead title={`Joonas.dev - ${title}`} description={description} />
    <style is:global>
      main {
        margin-top: 30px;
        padding: 3em 0;
      }
      .hero-image {
        width: 100%;
        padding-bottom: 1.5rem;
        height: 460px;
      }
      .hero-image img {
        display: block;
        margin: 0 auto;
        border-radius: 12px;
        box-shadow: var(--box-shadow);
        height: 100%;
        object-fit: cover;
      }
      .blog-post-container {
        display: flex;
        justify-content: center;
        align-items: center;
      }
      .blog-post {
        box-sizing: border-box;
        padding: 1rem 2.5em;
        max-width: 960px;
        border-radius: 12px;
        background: #0a0f14;
        border-top: 1.5px solid rgba(58, 170, 255, 0.22);
        border-bottom: 1.5px solid rgba(58, 170, 255, 0.22);
      }

      .blog-post .title {
        font-size: 1.4rem;
        background: linear-gradient(90deg, #00fff7, #ff6ec7);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
      }

      .prose {
        font-size: 1.2rem;
        line-height: 1.6;
        max-width: 80ch;
        overflow-y: scroll;
        color: var(--text-color);
        -moz-osx-font-smoothing: grayscale;
        -webkit-font-smoothing: antialiased !important;
        -moz-font-smoothing: antialiased !important;
        text-rendering: optimizelegibility !important;
        letter-spacing: 0.03em;
      }

      .prose h1,
      .prose h2,
      .prose h3,
      .prose h4,
      .prose h5,
      .prose h6 {
        background: linear-gradient(90deg, #00fff7, #ff6ec7);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        text-shadow: 0 0 6px rgba(0, 255, 247, 0.4);
      }
      .title {
        margin-bottom: 1em;
        padding: 1em 0;
        text-align: center;
        line-height: 1;
        text-shadow: 0 0 6px rgba(0, 255, 247, 0.4);
      }
      .title-header {
        margin-bottom: 0.5em;
      }
      .title-header h1 {
        margin: 0;
      }
      .date {
        margin-bottom: 0.5em;
        color: rgb(var(--gray));
      }
      .last-updated-on {
        font-style: italic;
      }
      .tags-container {
        margin-top: 1.5em;
        margin-bottom: 1em;
        padding-top: 1em;
        border-top: 1px solid rgba(0, 255, 247, 0.15);
        display: flex;
        justify-content: center;
      }
      .tags {
        display: flex;
        flex-wrap: wrap;
        gap: 0.75rem;
        align-items: center;
        justify-content: center;
      }
      .tag {
        display: inline-block;
        padding: 0.4rem 1rem;
        border-radius: 20px;
        font-size: 0.9rem;
        background: rgba(0, 255, 247, 0.1);
        border: 1px solid rgba(0, 255, 247, 0.3);
        color: #00fff7;
        transition: all 0.2s ease;
        text-decoration: none;
      }
      .tag:hover {
        background: rgba(0, 255, 247, 0.2);
        border-color: rgba(0, 255, 247, 0.5);
        box-shadow: 0 0 12px rgba(0, 255, 247, 0.4);
        transform: translateY(-2px);
      }
      .tag span {
        display: block;
      }
      p {
        max-width: 65ch;
      }

      @media (max-width: 960px) {
        .blog-post {
          width: 100vw;
        }
      }
      @media (max-width: 720px) {
        .blog-post .title {
          font-size: 1rem;
        }
        .prose {
          font-size: 1rem;
        }
      }
    </style>
  </head>

  <body>
    <Header />
    <main>
      <div class="hero-image">
        {heroImage && <Image width={1020} height={510} src={heroImage} alt="" />}
      </div>
      <section class="blog-post-container">
        <article class="blog-post">
          <div class="title">
            <div class="date">
              <FormattedDate date={pubDate} />
              {
                updatedDate && (
                  <div class="last-updated-on">
                    Last updated on <FormattedDate date={updatedDate} />
                  </div>
                )
              }
            </div>
            <div class="title-header">
              <h1>{title}</h1>
            </div>
            {
              tags && tags.length > 0 && (
                <div class="tags-container">
                  <div class="tags">
                    {tags.map((tag) => (
                      <a href={`/blog/tags/${tag}/`} class="tag">
                        <span>{tag}</span>
                      </a>
                    ))}
                  </div>
                </div>
              )
            }
            <hr />
          </div>
          <div class="prose">
            <slot />
          </div>
        </article>
      </section>
    </main>
    <Footer />
  </body>
</html>
